{
  "_comment": "Basic low-resource configuration for marker-pdf. Sets all batch sizes to 1 and disables LLM processing to minimize resource usage. Use with: --config_json config/marker_config.json",
  "LayoutBuilder": {
    "layout_batch_size": 1
  },
  "LineBuilder": {
    "detection_batch_size": 1,
    "ocr_error_batch_size": 1
  },
  "OcrBuilder": {
    "recognition_batch_size": 1
  },
  "TableProcessor": {
    "detection_batch_size": 1,
    "table_rec_batch_size": 1,
    "recognition_batch_size": 1
  },
  "LLMTableProcessor": {
    "max_concurrency": 1,
    "use_llm": false
  },
  "LLMTableMergeProcessor": {
    "max_concurrency": 1,
    "use_llm": false
  },
  "LLMSectionHeaderProcessor": {
    "max_concurrency": 1,
    "use_llm": false
  },
  "PdfProvider": {
    "pdftext_workers": 1
  }
}
